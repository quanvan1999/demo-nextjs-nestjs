{
  "name": "demo-nextjs-nestjs",
  "version": "1.0.0",
  "description": "Monorepo with Next.js frontend and NestJS backend",
  "private": true,
  "packageManager": "pnpm@8.15.4",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm -r dev",
    "build": "pnpm -r build",
    "start": "pnpm -r start",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "start:debug": "cd packages/backend && nest start --debug --watch --inspect"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "prettier": "^3.4.2"
  }
}
